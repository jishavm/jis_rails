<p id="notice"><%= notice %></p>
<p> Welcome <%= @user.firstname %> </p>

<p>
  <b>First name:</b>
  <%= @user.firstname %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.lastname %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>


<p>
  <b>Messages:</b>
  <div class="row"></div>

  <% @user.messages.each do |message| %>
    <%= link_to message.content[0..25], message %><br/>
  <p> Posted <%= time_ago_in_words message.created_at %> ago  </p>
    <br/>
  <% end %>
  <%= link_to "Create new message", new_message_path( :user_id =>@user.id) %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
